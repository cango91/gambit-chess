{
  "name": "@gambit-chess/server",
  "version": "1.0.0",
  "description": "Server for Gambit Chess game with WebSocket support",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf dist && yarn build",
    "clean": "rimraf dist",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "docs:html": "typedoc --out ../docs/api/html/server src/index.ts",
    "docs:json": "typedoc --json ../docs/api/json/server.json src/index.ts",
    "docs:md": "typedoc --plugin typedoc-plugin-markdown --out ../docs/api/md/server src/index.ts",
    "docs": "yarn docs:html && yarn docs:json && yarn docs:md",
    "docs:clean": "rimraf ../docs/api/html/server ../docs/api/json/server.json ../docs/api/md/server"
  },
  "author": "cango91",
  "license": "MIT",
  "dependencies": {
    "@gambit-chess/shared": "*",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.14",
    "@types/redis": "^4.0.11",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.0",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.28.1",
    "typedoc-plugin-markdown": "^4.6.0",
    "typescript": "^5.8.2"
  }
}
