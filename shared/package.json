{
  "name": "gambit-chess-shared",
  "version": "1.0.0",
  "description": "Shared code for Gambit Chess game",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "ts-node scripts/generateKnightRetreatTable.js",
    "build": "tsc",
    "test": "jest",
    "package": "npm pack --pack-destination ./package/"
  },
  "keywords": [
    "chess",
    "game",
    "shared",
    "vibe-coded"
  ],
  "author": "cango91",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "pako": "^2.1.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.30",
    "@types/pako": "^2.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2",
    "ts-node": "^10.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
